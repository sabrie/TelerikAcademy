@model IEnumerable<Movies.Models.Actor>

<table class="table" id="actor-details-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Ajax.ActionLink("Edit", "Edit", new { id = item.Id },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "partial-content",
                        OnSuccess = "hideCreateButton"
                    }, new { @class = "btn", id = "edit-actor-button-" + item.Id })
                @Ajax.ActionLink("Details", "Details", new { id = item.Id },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "partial-content",
                        OnSuccess = "hideCreateButton",
                    }, new { @class = "btn", id = "details-actor-button-" + item.Id })
                @Ajax.ActionLink("Delete", "Delete", new { id = item.Id },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "partial-content",
                        OnSuccess = "hideCreateButton"
                    }, new { @class = "btn", id = "delete-actor-button-" + item.Id })
            </td>
        </tr>
    }
</table>

