@model IEnumerable<Exam.Models.TicketViewModel>

@{
    ViewBag.Title = "Ticketing System";  
}

<h1>@ViewBag.Title</h1>
<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <div><strong>Category: </strong>@ticket.CategoryName</div>
            <div><strong>Author: </strong>@ticket.AuthorName</div>
            <div>@ticket.CommentsNumber comment(s)</div>
            <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More details ...</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>