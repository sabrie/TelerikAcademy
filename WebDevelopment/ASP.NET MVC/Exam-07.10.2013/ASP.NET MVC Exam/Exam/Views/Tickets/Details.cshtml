@model Exam.Models.TicketDetailsViewModel

@{
    ViewBag.Title = "Ticketing System";
}

<h1>@ViewBag.Title</h1>

<h2>@Model.Title</h2>

<h3><strong>Category: </strong>@Model.AuthorName</h3>

<div class="row">
    <div class="span4">
        <div><strong>Author:</strong> @Model.AuthorName</div>
        <div><strong>Priority:</strong> @Model.Priority</div>
    </div>
    <div class="span4">
        @if (!string.IsNullOrEmpty(Model.ScreenshotUrl))
        { 
            <img src="@Model.ScreenshotUrl" alt="@Model.ScreenshotUrl @Model.Title" /> 
        }        
    </div>
    <div class="span4">
        @if (!string.IsNullOrEmpty(Model.Description))
        { <div><strong>Description:</strong> @Model.Description</div> }      
    </div>
</div>

<br />
<div id="Comments">
    @foreach (var comment in Model.Comments)
    {
        @Html.Partial("_CommentPartial", comment)
    }
</div>

@if (User.Identity.IsAuthenticated)
{
    using (Ajax.BeginForm("PostComment", 
        new AjaxOptions 
        { 
            HttpMethod = "Post", 
            InsertionMode = InsertionMode.InsertAfter, 
            UpdateTargetId = "Comments", 
            OnFailure = "commentPostFailure" 
        }))
    {
        @Html.Hidden("TicketId", Model.Id)
        @Html.TextArea("comment")
        @Html.AntiForgeryToken()
    <br />    
    <input type="submit" value="Submit comment" />
    }
}

@section scripts{
    <script>
        function commentPostFailure() {
            alert("Error");
        }
    </script>
}
