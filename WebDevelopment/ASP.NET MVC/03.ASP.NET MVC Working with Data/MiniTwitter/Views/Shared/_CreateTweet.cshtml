@model MiniTwitter.Models.SubmitTweetViewModel

@using (Ajax.BeginForm("Create", "Tweets", new AjaxOptions()
                                            {
                                                HttpMethod = "POST",
                                                InsertionMode = InsertionMode.InsertBefore,
                                                UpdateTargetId = "tweets",
                                            }))
{
    @Html.AntiForgeryToken();

    <div>
        @Html.ValidationMessageFor(t => t.Content)
        <br />
        @Html.TextAreaFor(t => t.Content, 4, 50, null)
    </div>
    <div>
        <input type="submit" value="Tweet" class="btn btn-primary" />
    </div>
}